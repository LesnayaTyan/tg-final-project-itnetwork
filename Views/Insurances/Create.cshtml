                    <span asp-validation-for="Castka" class="text-danger"></span>
                </div>
                <br />

                <div class="col">
                    <label asp-for="PredmetPojisteni" class="control-label">Předmět pojištění</label>
                    <input asp-for="PredmetPojisteni" class="form-control" />
                    <span asp-validation-for="PredmetPojisteni" class="text-danger"></span>
                </div>
            </div>

            <div class="row">

                <div class="col">
                    <label asp-for="PlatnostOd" class="control-label">Platnost od</label>
                    <input asp-for="PlatnostOd" class="form-control" />
                    <span asp-validation-for="PlatnostOd" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PlatnostDo" class="control-label">Platnost do</label>
